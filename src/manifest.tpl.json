{
  "name": "focali-for-trello",
  "version": "x.x.x",
  "manifest_version": 2,
  "description": "Chrome extension to add focus to Trello boards.",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://trello.com/*"],
      "js": ["assets/scripts/content.js"]
    }
  ],
  "permissions": ["*://trello.com/*", "storage", "tabs"]
}
